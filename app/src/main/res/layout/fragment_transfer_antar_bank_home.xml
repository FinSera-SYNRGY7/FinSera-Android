<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:background="@color/neutral_01"
    tools:context=".ui.fragments.transfer.antar_bank.TransferAntarBankHome">

   <RelativeLayout
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:id="@+id/topmenu"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_back_button"
           android:layout_centerVertical="true"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/transfer_antarbank"
           android:textSize="24sp"
           android:textColor="@color/neutral_09"
           android:layout_centerInParent="true"/>
   </RelativeLayout>

   <LinearLayout
       android:visibility="gone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/topmenu"
       android:layout_marginTop="18dp"
       android:orientation="horizontal"
       android:id="@+id/buttonmenu">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:background="@drawable/button_background_neutral3"
           android:gravity="center"
           android:paddingVertical="10dp"
           android:id="@+id/btn_daftar_tersimpan"
           android:layout_marginEnd="5dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/daftar_tersimpan"
              android:textColor="@color/neutral_01"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:background="@drawable/button_background_primary"
           android:orientation="horizontal"
           android:gravity="center"
           android:paddingVertical="10dp"
           android:id="@+id/btn_input_baru"
           android:layout_marginStart="5dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/input_baru"
               android:textColor="@color/neutral_01"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_circle_add"
               android:layout_marginStart="10dp"/>

       </LinearLayout>
   </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topmenu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutnama"
                app:layout_constraintTop_toBottomOf="@id/topmenu"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nama"
                    android:textSize="16sp"
                    android:textColor="@color/neutral_09" />
                <EditText
                    android:id="@+id/namaEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background_neutral5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/nama"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutbanktujuan"
                app:layout_constraintTop_toBottomOf="@id/layoutnama"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_tujuan"
                    android:textSize="16sp"
                    android:textColor="@color/neutral_09" />
                <EditText
                    android:id="@+id/banktujuanEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background_neutral5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/bank_tujuan"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutrekeningtujuan"
                app:layout_constraintTop_toBottomOf="@id/layoutbanktujuan"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nomor_rekening_tujuan"
                    android:textSize="16sp"
                    android:textColor="@color/neutral_09" />
                <EditText
                    android:id="@+id/nomorEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background_neutral5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/nomor_rekening_tujuan"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutnominal"
                app:layout_constraintTop_toBottomOf="@id/layoutnomorrekening"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nominal"
                    android:textSize="16sp"
                    android:textColor="@color/neutral_09" />
                <EditText
                    android:id="@+id/nominalEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background_neutral5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/nominal"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutcatatan"
                app:layout_constraintTop_toBottomOf="@id/layoutnominal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/catatan"
                    android:textSize="16sp"
                    android:textColor="@color/neutral_09" />
                <EditText
                    android:id="@+id/catatanEditText"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/edit_text_background_neutral5"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text|textMultiLine"
                    android:hint="@string/catatan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan ke daftar tersimpan"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_primary"
                app:backgroundTint="@color/primary_blue"
                android:text="Lanjut"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/layoutcatatan"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <EditText
        android:visibility="gone"
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background_neutral2"
        app:layout_constraintTop_toBottomOf="@id/buttonmenu"
        android:drawableLeft="@drawable/ic_search"
        android:paddingVertical="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp"
        android:hint="@string/cari_daftar_tersimpan"
        android:singleLine="true" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/data_not_found"
            android:id="@+id/img_datanotfound"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belum_ada_daftar_tersimpan"
            android:textColor="@color/primary_blue"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:id="@+id/textbelumtersimpan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daftar_penerima"
            android:textColor="@color/neutral_04"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
