<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_darkblue"
    tools:context=".ui.fragments.splash.SplashFragment">

    <ImageView
        android:id="@+id/iv_bca_logo_splash_overlay"
        android:layout_width="wrap_content"
        android:layout_height="325dp"
        android:scaleType="fitXY"
        android:src="@drawable/iv_bca_splash_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_bca_logo_splash_main"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_bca_splash_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>