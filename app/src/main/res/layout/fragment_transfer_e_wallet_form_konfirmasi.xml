<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.topup.ewallet.TransferEWalletFormKonfirmasiFragment"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/konfirmasi_transaksi"
        android:textColor="?android:attr/textColor"
        android:textSize="@dimen/heading_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <TextView
        android:id="@+id/tvNomorEWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomor_e_wallet"
        android:textColor="?android:attr/textColor"
        android:textSize="@dimen/body_text1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tvNomorEWalletValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomor_e_wallet_user"
        android:textColor="?android:attr/textColor"
        android:textSize="@dimen/body_text1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tvNomorEWallet"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama"
        android:textColor="?android:attr/textColor"
        android:textSize="@dimen/body_text1"
        app:layout_constraintTop_toBottomOf="@id/tvNomorEWallet"
        app:layout_constraintStart_toStartOf="@id/tvNomorEWallet"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvNamaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gopay"
        android:textColor="?android:attr/textColor"
        android:textSize="@dimen/body_text1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tvNama"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvNominalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nominal"
        android:textColor="?android:attr/textColor"
        android:textSize="@dimen/body_text1"
        app:layout_constraintTop_toBottomOf="@id/tvNama"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/etNominal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/nominal"
        android:textColorHint="@color/neutral_03"
        android:inputType="number"
        android:background="@drawable/background_gray_bordered"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvNominalTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvPinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/masukkan_pin_pembayaran"
        android:textColor="?android:attr/textColor"
        android:textSize="@dimen/body_text1"
        app:layout_constraintTop_toBottomOf="@id/etNominal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/masukkan_pin_pembayaran"
        android:textColorHint="@color/neutral_03"
        android:inputType="numberPassword"
        android:background="@drawable/background_gray_bordered"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPinTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cbSimpanKeDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/simpan_ke_daftar_tersimpan"
        app:layout_constraintTop_toBottomOf="@id/etPin"
        app:layout_constraintStart_toStartOf="@id/etPin"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLanjut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lanjut"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/primary_blue"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cbSimpanKeDaftar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>