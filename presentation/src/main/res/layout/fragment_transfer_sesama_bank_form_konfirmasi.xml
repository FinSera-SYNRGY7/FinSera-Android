<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAccessibility="no"
    android:background="@color/neutral_01"
    tools:context=".ui.fragments.transfer.sesama_bank.TransferSesamaBankFormKonfirmasiFragment"
    android:padding="@dimen/_16sdp"
    android:contentDescription="@string/screen_confirm_transaction">

        <RelativeLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/topmenu"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/back"
                android:background="@android:color/white"
                android:importantForAccessibility="yes"
                android:id="@+id/btn_back"
                android:src="@drawable/ic_back_button"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/konfirmasi_transaksi"
                android:importantForAccessibility="yes"
                android:text="@string/konfirmasi_transaksi"
                android:textColor="@color/neutral_09"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topmenu"
        android:layout_marginTop="48dp"
        android:importantForAccessibility="yes"
        android:id="@+id/layoutnomorrekening">

        <TextView
            android:id="@+id/tvRekeningTujuanHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rekening_tujuan"
            android:importantForAccessibility="no"
            android:layout_marginEnd="12dp"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/tvRekeningTujuanHeader"
            android:text="1234567890"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:importantForAccessibility="no"
            android:id="@+id/tvRekeningTujuan"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutnomorrekening"
        android:layout_marginTop="24dp"
        android:importantForAccessibility="yes"
        android:id="@+id/layoutnamapemilikrekening">

        <TextView
            android:id="@+id/tvNamaPemilikHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_penerima"
            android:importantForAccessibility="no"
            android:layout_marginEnd="12dp"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1234567890"
            android:layout_toRightOf="@id/tvNamaPemilikHeader"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:importantForAccessibility="no"
            android:id="@+id/tvNamaPemilikRekeningTujuan"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutnamapemilikrekening"
        android:layout_marginTop="24dp"
        android:importantForAccessibility="yes"
        android:id="@+id/layoutcatatan">

        <TextView
            android:id="@+id/tvCatatanHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan"
            android:importantForAccessibility="no"
            android:layout_marginEnd="12dp"
            android:textColor="@color/neutral_09"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCatatanTf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:importantForAccessibility="no"
            android:layout_toRightOf="@id/tvCatatanHeader"
            android:maxLines="2"
            android:text="Placeholder Catatan"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutcatatan"
        android:layout_marginTop="24dp"
        android:importantForAccessibility="yes"
        android:id="@+id/layoutnominal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nominal Transfer"
            android:importantForAccessibility="no"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:importantForAccessibility="no"
            android:text="Rp100.000"
            android:textStyle="bold"
            android:id="@+id/tvNominalAwal"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutnominal"
        android:layout_marginTop="24dp"
        android:importantForAccessibility="yes"
        android:id="@+id/layoutbiayaadmin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:text="Biaya Admin"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:importantForAccessibility="no"
            android:text="Rp100.000"
            android:textStyle="bold"
            android:id="@+id/tvBiayaAdmin"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutbiayaadmin"
        android:layout_marginTop="24dp"
        android:importantForAccessibility="yes"
        android:id="@+id/layoutnominaltotal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nominal Total Transfer"
            android:importantForAccessibility="no"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Rp100.000"
            android:textStyle="bold"
            android:importantForAccessibility="no"
            android:id="@+id/tvNominalTotal"
            android:textColor="@color/neutral_09"
            android:textSize="16sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutmasukkanpin"
        app:layout_constraintTop_toBottomOf="@id/layoutnominaltotal"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_input_pin"
            android:importantForAccessibility="yes"
            android:text="@string/masukkan_pin_pembayaran"
            android:textSize="16sp"
            android:textColor="@color/neutral_09"
            android:layout_marginTop="32dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPinTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/pin"
            app:endIconMode="password_toggle"
            app:endIconContentDescription="PIN Disembunyikan"
            app:hintEnabled="false"
            android:importantForAccessibility="yes"
            android:textColorHint="@color/et_text_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_pin"
                android:padding="16dp"
                android:background="@drawable/edit_text_background_neutral5"
                android:hint="@string/pin"
                android:textSize="@dimen/heading_5"
                android:inputType="numberPassword" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_primary"
        app:backgroundTint="@color/primary_blue"
        android:text="@string/lanjut"
        android:importantForAccessibility="yes"
        android:padding="14dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>