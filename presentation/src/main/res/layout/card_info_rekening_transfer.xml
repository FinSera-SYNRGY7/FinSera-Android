<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:strokeWidth="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">

        <ImageView
            android:id="@+id/ic_bank"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_bca_labeled_colored_logo"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@id/tv_nama_penerima"
            app:layout_constraintBottom_toBottomOf="@id/tv_no_rekening"
            app:layout_constraintEnd_toStartOf="@id/tv_nama_penerima"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_nama_penerima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_penerima"
            android:textColor="@color/neutral_09"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_nama_bank"
            app:layout_constraintStart_toEndOf="@id/ic_bank"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_nama_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank BCA"
            android:textColor="@color/neutral_09"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_penerima"
            app:layout_constraintStart_toStartOf="@id/tv_nama_penerima"
            app:layout_constraintBottom_toTopOf="@id/tv_no_rekening"/>

        <TextView
            android:id="@+id/tv_no_rekening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textSize="18sp"
            android:textColor="@color/neutral_09"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_bank"
            app:layout_constraintStart_toStartOf="@id/tv_nama_bank"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>