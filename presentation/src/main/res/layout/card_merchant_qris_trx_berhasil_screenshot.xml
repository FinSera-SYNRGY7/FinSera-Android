<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/primary_blue"
    app:cardCornerRadius="14dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_done" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/transaksi_berhasil"
            android:text="@string/transaksi_berhasil"
            android:textColor="@color/neutral_01"
            android:textSize="24sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tanggal"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_date"
                android:textColor="@color/neutral_01"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textFontWeight="700"
                android:id="@+id/tv_date"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nominal"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_nominal"
                android:textColor="@color/neutral_01"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textFontWeight="700"
                android:id="@+id/tv_nominal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/biaya_admin"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gratis"
                android:textColor="@color/neutral_01"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textFontWeight="700"
                android:id="@+id/tv_biaya_admin"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nomor_transaksi"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_nomor_transaksi"
                android:textColor="@color/neutral_01"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textFontWeight="700"
                android:id="@+id/tv_nomor_transaksi"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_pengirim"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_nama_pengirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/nama"
                android:textColor="@color/neutral_01"
                android:textFontWeight="700"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rekening_pengirim"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_rekening_pengirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_number_value"
                android:textColor="@color/neutral_01"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textFontWeight="700" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jenis_transaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_jenis_transaksi_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Transaksi"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QRIS"
                android:textColor="@color/neutral_01"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textFontWeight="700"
                android:id="@+id/tv_jenis_transaksi"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_nama_merchant_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_merchant"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_merchant"
                android:textColor="@color/neutral_01"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textFontWeight="700"
                android:id="@+id/tv_nama_merchant"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_no_merhant_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_merchant"
                android:textColor="@color/neutral_01"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_rekening_tujuan"
                android:textColor="@color/neutral_01"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textFontWeight="700"
                android:id="@+id/tv_no_merchant"/>
        </RelativeLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>